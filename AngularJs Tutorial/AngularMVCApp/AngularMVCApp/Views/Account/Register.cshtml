<form ng-submit="register()">
    <label for="emailAddress">Email Address:</label>
    <input type="text" ng-model="registerForm.emailAddress" id="emailAddress" required />

    <label for="password">Password:</label>
    <input type="password" ng-model="registerForm.password" id="password" required />

    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" ng-model="registerForm.confirmPassword" id="password" required />

    <button type="submit">Register</button>
</form>

<div ng-if="registerForm.registrationFailure">Invalid username or password</div>